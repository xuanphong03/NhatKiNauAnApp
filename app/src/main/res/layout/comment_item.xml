<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="12dp"
    >

    <TextView
        android:id="@+id/tvTimeComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 30/10/2023"
        android:textSize="18dp"
        android:textColor="#FF0000" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
        android:id="@+id/tvContentComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="always"
        android:text="Nội dung bình luận Nội dung bình luận Nội dung bình luận Nội dung bình luận Nội dung bình luận Nội dung bình luận Nội dung bình luận Nội dung bình luận Nội dung bình luận"
        android:textSize="20dp" />

    </androidx.cardview.widget.CardView>
</LinearLayout>